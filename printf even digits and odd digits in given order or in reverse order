// printf even digits and odd digits in reverse order
#include<stdio.h>
void main()
{
	int n,even=0,odd=0;
	printf("enter number:");
	scanf("%d",&n);
	while(n>0)
	{
     int r=n%10;
     if(r%2==0)
     even=even*10+r;
     else
     odd=odd*10+r;
	n=n/10;	
	}
	printf("%d\t%d",even,odd);
}


// printf even digits and odd digits in given order
#include<stdio.h>
void main()
{
	int n,even=0,odd=0,p=1,s=1;
	printf("enter number:");
	scanf("%d",&n);
	while(n>0)
	{
     int r=n%10;
     if(r%2==0)
     {
     even=even+r*s;
     s=s*10;
     }
     else
     {
     odd=odd+r*p;
     p=p*10;
     }
	n=n/10;	
	}
	printf("%d\t%d",even,odd);
}
